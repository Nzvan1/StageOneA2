private String name;
private WeatherService service ; 
private JLabel lbl ;

	
	private String rainfall; 
public Rainfall(String name, WeatherService w) {
 this.name = name; 
 this.service =w; 
 this.lbl= new JLabel();
}
	public String getRainfall() {
	      return rainfall;
	   }
	   
	   public void update() {
		   if(SettingSingleton.getInstance().getRainSetting()== true){
			   this.rainfall =service.getRainfall(this.name); 
			  
		   }
	   }
	     
	   // Called to display output in the JTextArea
	       public void display(){
	    	if (SettingSingleton.getInstance().getRainSetting()== true){
	    	
	    	lbl.setText( "\n\tRainfall:\t" + this.getRainfall());
	       lbl.setSize(400, 30);
	    	
	    	
	    	Console.addComp((JComponent) lbl);}
	    		

	    	
	    	}
	   }
